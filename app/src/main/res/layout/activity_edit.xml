<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.EditActivity">

    <include
        layout="@layout/toolbar_main"
        android:id="@+id/toolbar"/>

    <EditText
        android:id="@+id/ru_word_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/ru_word_edit_hint"
        android:inputType="text"
        android:padding="16dp"/>

    <EditText
        android:id="@+id/en_word_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/en_word_edit_hint"
        android:inputType="text"
        android:padding="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hints"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"/>

    <ListView
        android:id="@+id/list_hints"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <Button
        android:id="@+id/add_edit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:onClick="onClickAddEditButton"
        android:layout_margin="16dp" />

</LinearLayout>